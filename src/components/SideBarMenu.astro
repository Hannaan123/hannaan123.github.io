---
const { sideBarActiveItemID } = Astro.props;
const items = [
  { id: "home", label: "Home", href: "/" },
  { id: "projects", label: "Projects", href: "/projects" },
  { id: "blog", label: "Blog", href: "/blog/" },
  { id: "cv", label: "CV", href: "/cv" },
  { id: "contact", label: "Contact", href: "mailto:contact@tarna.dev", external: true },
];
---

<ul class="menu grow shrink menu-md overflow-y-auto flex flex-col space-y-1 mt-2">
  {items.map((item) => (
    <li class="relative group">
      <a
        id={item.id}
        href={item.href}
        target={item.external ? "_blank" : "_self"}
        rel={item.external ? "noreferrer" : undefined}
        class={`flex items-center py-3 px-3 rounded-lg transition-all duration-300 ${
          sideBarActiveItemID === item.id
            ? "bg-lime-500/20 text-lime-400 font-semibold border-l-4 border-lime-400"
            : "text-gray-300 hover:text-lime-300 hover:bg-neutral/60"
        }`}
      >
        {item.label}
      </a>
    </li>
  ))}
</ul>
