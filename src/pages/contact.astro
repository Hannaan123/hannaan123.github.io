---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact" sideBarActiveItemID="contact">
  <div class="mb-5">
    <div class="text-3xl font-bold text-primary">Contact Me</div>
    <hr class="border-accent my-2"/>
  </div>

  <div class="mb-5 text-gray-200 text-justify">
    Feel free to reach out using the form below. I check messages regularly and will respond as soon as possible.
  </div>

  <form action="https://formspree.io/f/xkgqqady" method="POST" class="space-y-6">
    <!-- Name -->
    <div>
      <label class="block text-gray-200 font-medium mb-1">Name</label>
      <input
        type="text"
        name="name"
        placeholder="Your Name"
        required
        class="input w-full px-3 py-2 bg-neutral text-gray-200 border border-accent focus:outline-none focus:ring-2 focus:ring-lime-400"
      />
    </div>

    <!-- Email -->
    <div>
      <label class="block text-gray-200 font-medium mb-1">Email</label>
      <input
        type="email"
        name="_replyto"
        placeholder="you@example.com"
        required
        class="input w-full px-3 py-2 bg-neutral text-gray-200 border border-accent focus:outline-none focus:ring-2 focus:ring-lime-400"
      />
    </div>

    <!-- Message -->
    <div>
      <label class="block text-gray-200 font-medium mb-1">Message</label>
      <textarea
        name="message"
        placeholder="Your message..."
        required
        class="input w-full h-64 px-3 py-3 bg-neutral text-gray-200 border border-accent focus:outline-none focus:ring-2 focus:ring-lime-400 resize-none"
      ></textarea>
    </div>

    <!-- Submit -->
    <button
      type="submit"
      class="bg-lime-500 text-black font-semibold py-2 px-6 rounded-md hover:bg-lime-400 transition w-full md:w-auto"
    >
      Send Message
    </button>
  </form>
</BaseLayout>
